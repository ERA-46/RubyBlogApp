<% if current_user %>
    <li class="nav-item-dropdown mt-2 mx-3">
        <a clas="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <span class="badge rounded-pill bg-danger">
                <%= @unread.count >= 9 ? "9+" : @unread.count %>
                <i class="bi bi-bell-fill"></i>
            </span>
        </a>
        <ul class="dropdown-menu dropdown-menu-lg-end" aria-labelledby="navbarDropdown">
            <% @unread.each do |notification|%>
                <li>
                    <p class="text-success mx-3">New Notifications</p>
                    <%= render 'layouts/notification', notification: notification %>
                </li>
            <% end %>
            <% if @read.count > 0 && @unread.count > 0 %>
                <li>
                    <hr class="dropdown-divider">
                    <p class="text-warning mx-3">Old Notifications</p>
                </li>
            <% elsif @read.count + @unread.count == 0 %>
                <li class="dropdown-item">
                No Notifications yet
                </li>
            <% end %>
            <% @read.each do |notification|%>
                <%= render 'layouts/notification', notification: notification %>
            <% end %>
        </ul>
    </li>
<% end %>