<div class="dropzone dropzone-default dz-clickable" data-controller="dropzone" data-dropzone-max-file-size="5" data-dropzone-accepted-files="image/*" data-dropzone-max-files="1" data-upload-multiple="true">
  <%= form.file_field :image, multiple: false, direct_upload: true, data: { dropzone_target: 'input' } %>
  <div class="dropzone-msg dz-message needsclick">
    <h3 class="dropzone-msg-title">Drag and Drop images here to upload, or click here to browse</h3>
    <span class="dropzone-msg-desc">Maximum file size is 2MB. Accepted file types are png, jpg.</span>
  </div>
</div>