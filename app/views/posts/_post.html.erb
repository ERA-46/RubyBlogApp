<div class="card px-4 py-3">
  <div id="<%= dom_id post %>">
    <h4><%= post.title %></h4>
    <h6>Posted by : <%= link_to post.user.full_name, user_path(post.user) %></h6>
    <h6><%= pluralize(post.views, "view") %></h6>
    <hr/>  
      <% if post.image.attached? %>
      <%= image_tag(post.image, style:"width:500px; height:auto") %>
      <% end %> 

    <div>
      <strong>Body:</strong>
      <%= post.body %>
    </div>
  </div>
</div>
