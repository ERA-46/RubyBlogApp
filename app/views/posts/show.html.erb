<div class="container">
  <%= render @post %>

  <div class="card mt-3">
    <div class="d-flex justify-content-center mt-3 mb-3">
      <%= link_to "Edit this post", edit_post_path(@post), class:"btn btn-info mx-2" %>
      <%= link_to "Back to posts", posts_path, class:"btn btn-secondary mx-2" %> <hr/>
      <%= button_to "Destroy this post", @post, method: :delete, class:"btn btn-danger mx-2" %>
    </div>
  </div>

  <div class="container mt-5">
    <% @comments.each do |comment| %>
    <%= render 'comments/comment', post: @post, comment: comment %>
    <% end %>
  </div>
  <div class="mt-5 mb-5 mx-5">
    <%= render 'comments/form', post: @post, comment: @post.comments.build  %>
  </div>
</div>
