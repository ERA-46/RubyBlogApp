<div class="container">
  <div class="btn-group"> 
    <% if current_user.admin? %>
      <%= link_to "Edit this category", edit_category_path(@category), class:"btn btn-warning" %> |
      <%= button_to "Destroy this category", @category, method: :delete, class:"btn btn-danger" %>
    <% end %>
  </div>

  <%= render @category %>
  <div>
    <%= link_to "Back to categories", categories_path %>
  </div>
</div>
