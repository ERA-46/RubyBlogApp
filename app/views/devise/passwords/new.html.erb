<div class="container">
  <h2 class="mb-3">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control mt-2" %>
    </div>

    <div class="row mx-1">
      <%= f.submit "Send me reset password instructions", class:"btn btn-primary mt-3 mb-2" %>
    </div>
  <% end %>
  <div class="d-flex flex-row">
  <%= render "devise/shared/links" %>
  </div>
</div>
