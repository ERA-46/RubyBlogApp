<section class="mt-5">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
          class="img-fluid" alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <h2>Login</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <!-- Email input -->
          <div class="form-outline mb-4">
            <label class="form-label mt-3" for="form1Example13">Email address</label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control form-control-lg" %>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-4">
            <label class="form-label" for="form1Example23">Password</label>
            <%= f.password_field :password, autocomplete: "current-password", class:"form-control form-control-lg" %>
          </div>

          <div class="d-flex justify-content-around align-items-center mb-4">
            <!-- Checkbox -->
            <div class="form-check">
              <% if devise_mapping.rememberable? %>
                <%= f.check_box :remember_me, class:"form-check-label" %>
                <%= f.label :remember_me %>
              <% end %>
            </div>
            <%= render "devise/shared/links" %>
          </div>

          <!-- Submit button -->
          <%= f.submit "Log in", class:"btn btn-primary btn-lg btn-block px-5 mt-3"%>

        <% end %>
      </div>
    </div>
  </div>
</section>