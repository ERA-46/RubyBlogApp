<div class="projects mb-4 mx-3">
  <h1>Projects</h1>
</div>

<div class="card mb-5">
  <% @projects.each do |project| %>
  <div class="card-body">
    <div class="card-text">
      <%= render project %>
    </div>
    <div class="d-flex flex-column mt-3 mb-3 mx-2">
      <%= link_to "Show this project", project, class:"btn btn-outline-secondary" %>
    </div>

  </div>
  <% end %>
</div>