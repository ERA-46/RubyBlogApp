<div class="container mt-5">
    <div class="row mb-5 ">
        <div class="col-2">
        </div>
        <div class="col-3">
            <%= image_tag(@user.avatar, style:"width:170px; height:170px; border-radius:100% ") if @user.avatar.attached? %>
        </div>
        <div class="col-7 mt-5">
            <h1 class="text-dark"><%= @user.full_name %></h1>
            <h6 class="mt-3 text-secondary">
                <%= pluralize(@user.comments.size, "Comment")%>| 
                <%= pluralize(@user.views, "Account View")%>| 
                <%= pluralize(@total_views, "Total Post View")%>
            </h6>            
            <h6><%= link_to "Update account", edit_user_registration_path %></h6>
            <h6><%= link_to "Manage Billing", @portal_session.url unless @portal_session.nil? %></h6>
        </div> 
    </div>
    <div class="row">
        <div class="col-1">        
        </div>
        <div class="col-10">
            <% @posts.each do |post|%>
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="card-title"><%= link_to post.title, post %></div>
                        <div class="card-text"><%= "#{time_ago_in_words(post.created_at)} ago "%></div>
                        <div class="card-text"><%= post.body.to_plain_text.truncate_words(100)%></div>
                    </div>
                </div>
            <% end %>
        </div>
        <div class="col-1">
        </div>
    </div>
</div>

