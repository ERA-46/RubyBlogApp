<div class="container mt-5">
    <div class="row mb-3">
        <div class="col-4">
            <%= image_tag(@user.avatar, style:"width:170px; height:170px; border-radius:100% ") if @user.avatar.attached? %>
        </div>
        <div class="col-8 mt-5">
            <h1><%= @user.full_name %></h1>
            <h6>
                <%= pluralize(@user.comments.size, "Comment")%>| 
                <%= pluralize(@user.views, "View")%>| 
                <%= pluralize(@total_views, "Total Post View")%>
            </h6>
        </div> 
    </div>
    <div class="row">
        <div class="col-1">        
        </div>
        <div class="col-10">
            <% @posts.each do |post|%>
                <div class="card mt-3">
                    <div class="card-body">
                        <div class="card-title"><%= link_to post.title, post %></div>
                        <div class="card-text"><%= "#{time_ago_in_words(post.created_at)} ago "%></div>
                        <div class="card-text"><%= post.body.to_plain_text.truncate_words(100)%></div>
                    </div>
                </div>
            <% end %>
        </div>
        <div class="col-1">
        </div>
    </div>
</div>

