<h4 class="text-center text-muted mt-5">Serach appears <%= pluralize(@posts.count, "Result")%></h4>


<div class="container">
  <hr/>
  <table class="table table-bordered mt-4">
    <thead class="thead-dark">
      <tr>
        <th><%= sort_link(@query, :title, "Title") %></th>
        <th><%= sort_link(@query, :body, "Blog Content") %></th>
        <th><%= sort_link(@query, :user_name, "Users") %></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.title, post %></td>
          <td><%= post.body.to_plain_text.truncate_words(25) %></td>
          <td><%= link_to post.user.name, post.user %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>